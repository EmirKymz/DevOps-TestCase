pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/EmirKymz/test'
            }
        }
        stage('Build') {
            steps {
                sh './gradlew build'
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("emircan/java-uygulama:latest")
                }
            }
        }
        stage('Push Docker Image') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', 'docker-hub-credentials') {
                        docker.image("emircan/java-uygulama:latest").push()
                    }
                }
            }
        }
        stage('Deploy') {
            steps {
                sshagent(['second-server-credentials']) {
                    sh 'ssh -o StrictHostKeyChecking=no user@second-server "docker pull emircan/java-uygulama:latest && docker run -d -p 8080:8080 emircan/java-uygulama:latest"'
                }
            }
        }
    }
}
